 </header>


<div class="container-fluid">

    <div class= "row justify-content-center">
      <div class="col-4">
        <h3 class="text-info text-center">Mis Indicadores</h3>
        <table class="table table-striped" style="float: left">
          <thead class="table-inverse">
            <tr>
              <th>#</th>
              <th class="text-center">Nombre</th>
              <th class="text-center">FÃ³rmula</th>
            </tr>
          </thead>
          <tbody class="empresas_list">
          {{#each this.indicadores}}
          <tr>
            <th scope="row">{{@index}}</th>
            <th class="text-center">{{nombre}}</th>
            <th class="text-center">{{formula}}</th>
          </tr>
          {{/each}}
          </tbody>
        </table>
      </div>

      <div class="col-4">
        <h3 class="text-info text-center">Empresas</h3>
        <table class="table table-striped" style="float: right">
          <thead class="table-inverse">
            <tr>
              <th>#</th>
              <th class="text-center">Nombre</th>
              <th class="text-center">Periodos</th>
            </tr>
          </thead>
          <tbody class="empresas_list">
          {{#each this.periodos}}
          <tr>
            <th scope="row">{{@index}}</th>
            <th class="text-center">{{@key}}</th>
            <th class="text-center">{{this}}</th>
          </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>


<!--##############################################################################################################-->
  <div class="row justify-content-center"">
  <h3 class="text-info text-center">Seleccionar datos para evaluar</h3>
  </div>
  <div class="row justify-content-center"">
  <div class="col-xs-4">  
    <form action="/indicadores/eval" method="get">
     <div class="form-group">
       <label for="indicador">Indicador</label>
       <select name="indicador">
         <option value="null" selected="selected"></option>
        {{#each this.indicadores}}
        <option value="{{nombre}}" {{#selected}} selected="selected"{{/selected}}> {{nombre}} </option>
        {{/each}}
       </select>

       <label for="periodos">Empresa</label>
        <select name="empresa">
          <option value="null" selected="selected"></option>
        {{#each this.periodos}}
        <option value="{{@key}}" {{#selected}} selected="selected"{{/selected}}> {{@key}} </option>
        {{/each}}
       </select>

        <label for="periodos">Periodo</label>
        <select name="periodo">
          <option value="null" selected="selected"></option>
        {{#each this.periodos}}
          {{#each this}}
            <option value="{{this}}" {{#selected}} selected="selected"{{/selected}}> {{this}} </option>
          {{/each}}
        {{/each}}
       </select>
        <button class="btn btn-primary" type="submit">Evaluar</button>
        <label for="periodos"> <b> Resultado = {{this.resultado}} </b> </label>
     </div>
      </form>
   </div>
</div>
